#include <iostream>

using namespace std;



class Example

{

	private:

		int val;

	public:

		//function declarations

		void init_val(int v); // void init_val(int v) {jshjks}

		void print_val();

};

//syntax return_type class name::function name(){}

//void Example::init_val(int v){}

// void Example::print_val(){cout<<val;}

//function definitions ouside class function example

void Example::init_val(int v)

{

	val=v;

}



void Example::print_val()

{

	cout<<"val: "<<val<<endl;

}

int main()

{

	//create object

	Example Ex;

	Ex.init_val(50);

	Ex.print_val();

	

	return 0;

}








