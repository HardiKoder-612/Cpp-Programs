#include <iostream>

using namespace std;

class Example

 {

  private: int val; // access specifier is private

  public: 

  //function to assign value 

  void init_val(int v)

  {

	 val=v;

	} 

  //function to print value 

  void print_val()

  {

   cout<<"val:"<<val<<endl; 

  }

 }; 

int main()

{

 //create object int a=100; cin<a;

 Example Ex; 

 Ex.init_val(100); 

 Ex.print_val(); 

return 0; 

} 

